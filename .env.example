# AI-Assisted Insights Agent - Environment Variables
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# =============================================================================
# CONFIGURATION
# =============================================================================

# Path to configuration file (default: config.yaml)
CONFIG_PATH=config.yaml

# =============================================================================
# DATABASE CONNECTIONS (choose one based on your data source)
# =============================================================================

# PostgreSQL
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=analytics
# POSTGRES_USER=your_username
# POSTGRES_PASSWORD=your_password

# SQL Server / Azure SQL
# SQLSERVER_HOST=your-server.database.windows.net
# SQLSERVER_DB=your_database
# SQLSERVER_USER=your_username
# SQLSERVER_PASSWORD=your_password

# MySQL
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DB=analytics
# MYSQL_USER=your_username
# MYSQL_PASSWORD=your_password

# =============================================================================
# CLOUD DATA WAREHOUSES
# =============================================================================

# Snowflake
# SNOWFLAKE_ACCOUNT=your_account
# SNOWFLAKE_USER=your_username
# SNOWFLAKE_PASSWORD=your_password
# SNOWFLAKE_WAREHOUSE=your_warehouse
# SNOWFLAKE_DATABASE=your_database
# SNOWFLAKE_SCHEMA=your_schema

# Google BigQuery
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# BIGQUERY_PROJECT_ID=your-project-id
# BIGQUERY_DATASET=analytics

# Databricks
# DATABRICKS_HOST=your-workspace.cloud.databricks.com
# DATABRICKS_TOKEN=your_access_token
# DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your_warehouse_id

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Enable debug mode (default: false)
# DEBUG=true

# Query timeout in seconds (default: 30)
# QUERY_TIMEOUT=30

# Maximum results to return (default: 10000)
# MAX_RESULTS=10000
